<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cheyrouse.gael.mynews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="com.android.alarm.permission.SET_TIME" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_my_news"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_my_news_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Controllers.activities.SearchActivity"
            android:parentActivityName=".Controllers.activities.MainActivity">
        </activity>
        <activity android:name=".Controllers.activities.HelpActivity" />
        <activity android:name=".Controllers.activities.AboutActivity" />
        <activity
            android:name=".Controllers.activities.NotificationActivity"
            android:parentActivityName=".Controllers.activities.MainActivity" />
        <activity android:name=".Controllers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.activities.ArticleDetailActivity"
            android:parentActivityName=".Controllers.activities.MainActivity" />

        <receiver
            android:name=".Utils.AlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <uses-library
            android:name="android.test.runner"
            android:required="false" />
        <uses-library
            android:name="android.test.base"
            android:required="false" />
        <uses-library
            android:name="android.test.mock"
            android:required="false" />
    </application>

</manifest>