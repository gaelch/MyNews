<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cheyrouse.gael.mynews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_my_news"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_my_news_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Controllers.Activities.AboutActivity"></activity>
        <activity
            android:name=".NotificationActivity"
            android:parentActivityName=".Controllers.Activities.MainActivity" />
        <activity android:name=".Controllers.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Activities.ArticleDetailActivity" />
        <activity
            android:name=".Controllers.Activities.SearchActivity"
            android:parentActivityName=".Controllers.Activities.MainActivity" />

        <receiver android:name=".Utils.AlarmReceiver">
            <intent-filter>
                <action android:name="me.proft.alarms.ACTION_ALARM" />
            </intent-filter>
        </receiver>
    </application>

</manifest>